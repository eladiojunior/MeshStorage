<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>MeshStorage - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="container">
<header class="mb-auto">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img alt="Logo" class="dark:invert me-2" src="logo-smart.png" width="45" height="40"/>
            <span class="text-xl font-semibold text-gray-800">MeshStorage</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Configuracao" asp-action="Index">Configurações</a>
                </li>
            </ul>
            <ul class="nav justify-content-end">
                <li>
                    <span class="material-icons" style="font-size:2.0rem">account_circle</span>
                </li>
            </ul>
        </div>
    </nav>
</header>

<main role="main">
    @Html.ValidationSummary()
    @RenderBody()
</main>
<script>
@{
    var urlRoot = $"{Context.Request.Scheme}://{Context.Request.Host}{Url.Content("~")}/";
}
var _contexto = '@urlRoot';
</script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>