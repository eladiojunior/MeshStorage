@model meshstorage_frontend.Models.ViewModels.InfoCardViewModel
<div class="card metric-card @Model.StatusClasses border-start border-4">
    <div class="card-body" title="@Model.Ajuda">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <p class="card-text text-muted small">@Model.Titulo</p>
                <h3 class="card-title h2 mb-0">@Model.Value</h3>
            </div>
            <div class="rounded-circle p-2 div-with-icon bg-light @Model.IconsClasses">
                <span class="material-icons" style="font-size: 2.0rem">@Model.Icon</span>
            </div>
        </div>
    </div>
</div>