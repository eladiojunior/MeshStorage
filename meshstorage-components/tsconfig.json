{
    "compilerOptions": {
        "target": "ES2022",
        "outDir": "./dist/",
        "noEmitOnError": true,
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "moduleResolution": "Bundler",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["src", "vite.config.ts"]
}